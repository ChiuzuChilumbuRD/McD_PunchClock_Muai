<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carddatasync3.MainPage"
             Title="Card Data Sync">

    <StackLayout Padding="20" Spacing="15">
        
        <!-- Header label -->
        <Label Text="HCM Sync and Fingerprint Operations"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />

        <!-- Entry for custom directory path -->
        <Entry x:Name="DirectoryPathEntry" 
               Placeholder="Enter custom directory path or leave empty for default" 
               Margin="0,0,0,20"/>

        <!-- Buttons for simulating tasks -->
        <Button Text="Check and Create Files"
                Clicked="OnCheckAndCreateFileClicked" 
                Margin="0,5"/>
        
        <Button Text="Simulate Fingerprint Upload"
                Clicked="OnSimulateFingerprintUploadClicked" 
                Margin="0,5"/>

        <Button Text="Retry Card Data Sync"
                Clicked="OnRetryCardDataSyncClicked"
                Margin="0,5"/>

        <Button Text="Simulate Upload to HCM"
                Clicked="OnUploadToHCMClicked"
                Margin="0,5"/>

        <!-- Logs the output -->
        <ScrollView HeightRequest="200"> <!-- Added ScrollView for long logs -->
            <Editor x:Name="OutputEditor" 
                    Placeholder="Logs" 
                    IsReadOnly="True"
                    VerticalOptions="EndAndExpand" 
                    AutoSize="TextChanges"
                    BackgroundColor="LightGray"
                    Margin="0,20,0,0"/>
        </ScrollView>
    </StackLayout>

</ContentPage>
